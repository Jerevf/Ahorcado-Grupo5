@{
    ViewBag.Title = "Men√∫ Principal";
}

<style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    body {
        width: 100vw;
        height: 100vh;
        overflow-x: hidden;
    }
    .main-bg {
        min-height: 100vh;
        min-width: 100vw;
        width: 100vw;
        height: 100vh;
        background: linear-gradient(135deg, #4e2a8e 0%, #2b86c5 100%);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        position: fixed;
        top: 0;
        left: 0;
    }
    .menu-title {
        color: #ffd600;
        font-size: 3rem;
        font-weight: bold;
        letter-spacing: 2px;
        text-align: center;
    }
    .menu-subtitle {
        color: #ff7eb9;
        font-size: 1.2rem;
        text-align: center;
        margin-bottom: 2rem;
        letter-spacing: 2px;
    }
    .menu-btn {
        width: 320px;
        font-size: 1.3rem;
        font-weight: 600;
        margin: 0.7rem 0;
        border-radius: 10px;
        border: none;
        transition: transform 0.1s, box-shadow 0.1s;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        text-decoration: none;
        display: block;
        text-align: center;
    }
    .btn-crear { background: #1fd655; color: #fff; }
    .btn-crear:hover { background: #17b94c; transform: scale(1.03); }
    .btn-iniciar { background: #00bcd4; color: #fff; }
    .btn-iniciar:hover { background: #0097a7; transform: scale(1.03); }
    .btn-agregar { background: #ffb300; color: #fff; }
    .btn-agregar:hover { background: #ff8f00; transform: scale(1.03); }
    .btn-leader { background: #a259f7; color: #fff; }
    .btn-leader:hover { background: #7c3aed; transform: scale(1.03); }
    .menu-footer {
        color: #fff;
        margin-top: 2.5rem;
        text-align: center;
        font-size: 1rem;
        opacity: 0.8;
    }
</style>

<div class="main-bg">
    <div>
        <div class="menu-title">AHORCADO</div>
        <div class="menu-subtitle">RETRO EDITION</div>
        <hr style="border: 1.5px solid #ffd600; width: 120px; margin: 0 auto 2.5rem auto; opacity: 0.7;" />
        <a href="@Url.Action("CrearJugador", "Home")" class="menu-btn btn-crear">Crear Jugador</a><br />
        <button type="button" class="menu-btn btn-iniciar">Iniciar Partida</button><br />
        <button type="button" class="menu-btn btn-agregar">Agregar Palabra</button><br />
        <button type="button" class="menu-btn btn-leader">Leaderboard</button>
        <div class="menu-footer">
            <!-- Texto eliminado -->
        </div>
    </div>
</div> 