@{
    ViewBag.Title = "Men√∫ Principal";
}

<style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    body {
        width: 100vw;
        height: 100vh;
        overflow-x: hidden;
    }
    .main-bg {
        min-height: 100vh;
        min-width: 100vw;
        width: 100vw;
        height: 100vh;
        background: linear-gradient(135deg, #4e2a8e 0%, #2b86c5 100%);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        position: fixed;
        top: 0;
        left: 0;
    }
    .menu-title {
        color: #ffd600;
        font-size: 3rem;
        font-weight: bold;
        letter-spacing: 2px;
        text-align: center;
    }
    .menu-subtitle {
        color: #ff7eb9;
        font-size: 1.2rem;
        text-align: center;
        margin-bottom: 2rem;
        letter-spacing: 2px;
    }
    .menu-btn {
        width: 320px;
        font-size: 1.3rem;
        font-weight: 600;
        margin: 0.7rem 0;
        border-radius: 10px;
        border: none;
        transition: transform 0.1s, box-shadow 0.1s;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        text-decoration: none;
        display: block;
        text-align: center;
    }
    .btn-crear { background: #1fd655; color: #fff; }
    .btn-crear:hover { background: #17b94c; transform: scale(1.03); }
    .btn-iniciar { background: #00bcd4; color: #fff; }
    .btn-iniciar:hover { background: #0097a7; transform: scale(1.03); }
    .btn-agregar { background: #ffb300; color: #fff; }
    .btn-agregar:hover { background: #ff8f00; transform: scale(1.03); }
    .btn-leader { background: #a259f7; color: #fff; }
    .btn-leader:hover { background: #7c3aed; transform: scale(1.03); }
    .menu-footer {
        color: #fff;
        margin-top: 2.5rem;
        text-align: center;
        font-size: 1rem;
        opacity: 0.8;
    }
    .alert {
        position: fixed;
        top: 20px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 1000;
        padding: 1rem 2rem;
        border-radius: 8px;
        font-weight: bold;
        animation: slideDown 0.5s ease-out;
        max-width: 400px;
        text-align: center;
    }
    .alert-success {
        background-color: #d4edda;
        border: 1px solid #c3e6cb;
        color: #155724;
    }
    .alert-danger {
        background-color: #f8d7da;
        border: 1px solid #f5c6cb;
        color: #721c24;
    }
    @@keyframes slideDown {
        from {
            transform: translateX(-50%) translateY(-100%);
            opacity: 0;
        }
        to {
            transform: translateX(-50%) translateY(0);
            opacity: 1;
        }
    }
</style>

<div class="main-bg">
    @if (TempData["MensajeExito"] != null)
    {
        <div class="alert alert-success">
            @TempData["MensajeExito"]
        </div>
    }
    
    @if (TempData["MensajeError"] != null)
    {
        <div class="alert alert-danger">
            @TempData["MensajeError"]
        </div>
    }

<div>
    <div class="menu-title">AHORCADO</div>
    <div class="menu-subtitle">RETRO EDITION</div>
    <hr style="border: 1.5px solid #ffd600; width: 120px; margin: 0 auto 2.5rem auto; opacity: 0.7;" />
    <a href="@Url.Action("CrearJugador", "Home")" class="menu-btn btn-crear">Crear Jugador</a><br />
    <a href="@Url.Action("IniciarPartida", "Home")" class="menu-btn btn-iniciar">Iniciar Partida</a><br />
    <a href="@Url.Action("Crear", "Palabras")" class="menu-btn btn-agregar">Agregar Palabra</a><br />
    <a href="@Url.Action("Leaderboard", "Home")" class="menu-btn btn-leader">Leaderboard</a><br />
    <div class="menu-footer">
        <!-- Texto eliminado -->
    </div>
</div>
</div>

<script>
    // Auto-hide alerts after 5 seconds
    setTimeout(function() {
        const alerts = document.querySelectorAll('.alert');
        alerts.forEach(function(alert) {
            alert.style.opacity = '0';
            alert.style.transform = 'translateX(-50%) translateY(-100%)';
            setTimeout(function() {
                alert.remove();
            }, 500);
        });
    }, 5000);
</script> 